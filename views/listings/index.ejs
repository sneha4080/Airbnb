<% layout('layouts/boilerplate') %>

  <body>
    <style>
  #filters {
                display: flex;
                flex-direction: row;
                flex-wrap: wrap;
                align-items: center;
                /* to je swich-togle verrtical niche ave */
            }
            
      .filter {
        margin-right: 2rem;
        text-align: center;
        margin-top: 2rem;
        opacity: 0.7;
      }

      .filter:hover {
        opacity: 1;
        cursor: pointer;
      }

      .filter p {
        font-size: 0.8rem;
      }
      .tax-info{
        /* visibility: hidden; */
        display: none ;
      }
      .swich-Toggle{
                border: 1px solid black;
                border-radius: 1rem;
                height: 3rem;
                padding: 1rem;
                margin-left: 5rem;
                /* margin: 0rem 0 0rem 50rem; */
                display: flex;
                align-items: center;

      }
      
        </style>

    <!-- <form   method="get" action="/listing/new">
        <button>Create New Listings</button>
        </form>   directl y All listing click to ae page per javay not need-->
    <div id="filters">
      <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div> <!----icon pachi nmae niche to add div and p -->
        <p>Trending</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div> <!----icon pachi nmae niche to add div and p -->
        <p>Rooms</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain-city"></i></div> <!----icon pachi nmae niche to add div and p -->
        <p>Iconic cities</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain"></i></div> <!----icon pachi nmae niche to add div and p -->
        <p>Mountains</p>
      </div>
      <div class="filter">
        <div><i class="fa-brands fa-fort-awesome"></i></div> <!----icon pachi nmae niche to add div and p -->
        <p>carstls</p>
      </div>
      <div class="filter">
        <div><i class="fa-regular fa-snowflake"></i></div> <!----icon pachi nmae niche to add div and p -->
        <p>Arctic</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-campground"></i></div> <!----icon pachi nmae niche to add div and p -->
        <p>Camping</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-tractor"></i></div> <!----icon pachi nmae niche to add div and p -->
        <p>Farms</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-cash-register"></i></div> <!----icon pachi nmae niche to add div and p -->
        <p>Case</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-landmark-dome"></i></div> <!----icon pachi nmae niche to add div and p -->
        <p>Doms</p>
      </div>
      
   
      <div class="swich-Toggle">
        <div class="form-check-reverse form-switch"> <!---revee class add thi pela text ave pachi swich btn ---->
          <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
          <label class="form-check-label" for="flexSwitchCheckDefault">Display total after Text</label>
        </div>
      </div>
    </div>
    <div class="listing-card-container">
    <div class="row row-cols-lg-3 row-md-2 row-cols-sm-1">
      <% for(let listing of allListings) { %>
        <!-- for loop run thay to card creat thay -->
        <a href="/listing/<%=listing._id%>" class="listing-link">
          <div class="card col listing-card">
            <!--add the class to make diffrent stylelisting-card---->
            <img src="<%= listing. image.url %>" class="card-image-top" alt="listing_image" style="height: 20rem" />
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text">
                <b>
                  <%=listing.title%> <br />
                </b>
                &#8377; <% if (listing.price !=null && !isNaN(listing.price)) { %>
                  <%= listing.price.toLocaleString("en-IN") %>/night <% } else { %>
                      Price not available <% } %>
                      <i class="tax-info"> &nbsp; +18% GST </i>
              </p>
            </div>
          </div>
        </a>
        
        <% }%>
      </div>
    </div>
  </body>
  <script>
    const switchElement = document.getElementById("flexSwitchCheckDefault");
    switchElement.addEventListener("click", () => {
      let TaxInfo = document.getElementsByClassName("tax-info");
      // console.log(TaxInfo); //39 property aave
      for(info of TaxInfo){
        if(info.style.display != "inline"){
          info.style.display = "inline";
        }else{
          info.style.display = "none";
        }
      }

    });
  </script>
