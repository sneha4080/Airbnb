<% layout('layouts/boilerplate') %>
<% layout("./layouts/boilerplate.ejs") %>

<script>
    const mapToken = "<%= process.env.MAP_TOKEN %>";
   let listing= "<%- JSON.stringify(listing) %>"

   window.mapToken="<%=  process.env.MAP_TOKEN %>";
 

</script>
  <body>
    <div class="row mt-3">
      <div class="col-8 offset-3">
        <!-- offset thii center middle ma aavay -->
        <h3><b>
            <%= listing.title %>
          </b></h3>
      </div>
      <div class="card col-6 offset-3 show-card listing-card">
        <!--add the class to make diffrent stylelisting-card"--->
        <img src="<%= listing. image.url %>" class="card-img-top show-img" alt="..." />

        <div class="card-body">
          <p class="card-text"></p>
          <p class="card-text">Owner By :<b>
              <%= listing.owner.username %>
            </b></p>
          <p class="card-text">
            <%= listing.description %>
          </p>
          <p class="card-text">
            &#8377; <%= listing.price.toLocaleString("en-IN") %>
          </p>
          <p class="card-text">
            <%= listing.location %>
          </p>
          <p class="card-text">
            <%= listing.country %>
          </p>
        </div>
      </div>
      </br>

      <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
        <div class="btns">
          <a href="/listing/<%= listing._id %>/edit" class="btn btn-dark offset-3 add-btn mb-3 col-0">Edit</a>
          <form method="post" action="/listing/<%= listing._id%>/reviews?_method=DELETE">
            <button class="btn btn-dark offset-2">Delete</button>
          </form>
        </div>
        <hr />
        <% } %>

          <div class="col-8 offset-3 mb-3">
            <% if(currUser) {%>
              <hr />
              <b>
                <h4>Leave a Review</h4>
              </b>
              <form method="post" action="/listing/<%= listing.id  %>/reviews" novalidate class="needs-validation">

                <div class="mb-3 mt-3">
                  <label for="rating" class="form-rating">Rating</label>
                  <fieldset class="starability-fade">
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked
                      aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                </div>
                </fieldset>

                <!-- </div> -->
                <div class="mb-3 mt-3">
                  <label for="comment" class="form-label">Comments</label>
                  <textarea name="review[comment]" cols="30" rows="3" id="comment" class="form-control"
                    required></textarea>
                  <div class="invalid-feedback">Please add comment for review</div>
                </div>
                <button class="btn btn-outline-dark">Submit</button>
              </form>
              <% } %>


                <hr />

                <!-- only review & rating j jova mate -->
                <% if(listing.reviews.length> 0) {%>
                  <div class="row">
                    <h4><b>All Reviews </b></h4>
                    <!----ro then col apply-->
                    <% for(review of listing.reviews) { %>
                      <div class="card col-6 mb-3">
                        <!----make like card to reviews-->
                        <div class="card-body">
                          <h5 class="card-title">@ <b>
                              <%= review.author.username %>
                            </b></h5>
                          <p class="starability-result card-text" data-rating=<%=review.rating %>>
                          </p>
                          <p class="card-text">
                            <%= review.comment %>
                          </p>

                        </div>
                        <form class="mb-3 offset-5" method="post"
                          action="/listing/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                          <button class="btn btn-dark btn-sm">Delete</button>
                        </form>
                      </div>
                      <% } %>
                  </div>
                  <% } %>
          </div>
          <div class="col-8 offset-3 mb-3">
            <h3>Where youâ€™ll be</h3>
            <div id="map"></div>

          </div>
    </div>

    <script src="/js/map.js"></script>
    </body>
