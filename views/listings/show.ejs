<% layout('layouts/boilerplate') %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <!-- offset thii center middle ma aavay -->
      <h3><b><%= listing.title %></b></h3>
    </div>
    <div class="card col-6 offset-2 show-card listing-card">
      <!--add the class to make diffrent stylelisting-card"--->
      <img src="<%= listing.image %>" class="card-img-top show-img" alt="..." />

      <div class="card-body">
        <p class="card-text">
          <%= listing.description %>
          <br />
          &#8377; <%= listing.price.toLocaleString("en-IN") %> <br />
          <%= listing.location %> <br />
          <%= listing.country %>
        </p>
      </div>
    </div>
    <div class="btns">
      <a
        href="/listings/<%= listing._id %>/edit"
        class="btn btn-dark col-1 offset-2 add-btn"
        >Edit</a
      >
      <!-- <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE"> -->
      <form
        method="POST"
        action="/listings/<%= listing._id%>/reviews?_method=DELETE"
      >
        <button class="btn btn-dark offset-4">Delete</button>
      </form>
    </div>
    <hr />
    <div class="col-8 offset-3 mb-3">
      <h4>Leave a Review</h4>
      <form
        method="post"
        action="/listing/<%= listing.id  %>/reviews"
        novalidate
        class="needs-validation"
      >
        <!----rating mate div-->
        <div class="mb-3 mt-3">
          <label for="rating" class="form-label">Rating</label>
          <input
            type="range"
            class="form-range"
            min="1"
            max="5"
            id="rating"
            name="review[rating]"
          />
        </div>
        <div class="mb-3 mt-3">
          <label for="comment" class="form-label">Comments</label>
          <textarea
            name="review[comment]"
            cols="30"
            rows="3"
            id="comment"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Please add comment for review</div>
        </div>
        <button class="btn btn-outline-dark">Submit</button>
      </form>
      <hr />
      <h4><b>All Reviews </b></h4>
      <!-- only review & rating j jova mate -->
      <div class="row">
        <!----ro then col apply-->
        <% for(review of listing.reviews) { %>
        <div class="card col-6 mb-3">
          <!----make like card to reviews-->
          <div class="card-body">
            <h5 class="card-title">John dany</h5>
            <p class="card-text"><%= review.comment %></p>
            <p class="card-text"><%= review.rating %> stars</p>
          </div>
          <form
            class="mb-3"
            method="post"
            action="/listing/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
          >
            <button class="btn btn-dark btn-sm">Delete</button>
          </form>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</body>
