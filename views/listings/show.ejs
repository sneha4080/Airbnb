
<% layout('layouts/boilerplate') %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <!-- offset thii center middle ma aavay -->
      <h3><b><%= listing.title %></b></h3>
    </div>
    <div class="card col-6 offset-2 show-card">
      <img src="<%= listing.image %>" class="card-img-top show-img" alt="..." />

      <div class="card-body">
        <p class="card-text">
          <%= listing.description %>
          <br />
          &#8377; <%= listing.price.toLocaleString("en-IN") %> <br />
          <%= listing.location %> <br />
          <%= listing.country %>
        </p>
      </div>
    </div>
    <div class="btns">
      <a
        href="/listings/<%= listing._id %>/edit"
        class="btn btn-dark col-1 offset-2 add-btn"
        >Edit</a
      >
      <!-- <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE"> -->
        <form method="POST" action="/listings/<%= listing._id%>/reviews?_method=DELETE"> 

        <button class="btn btn-dark offset-4">Delete</button>
      </form>
    </div>
   <hr />
    <div class="col-8 offset-3 mb-3">
      <h4>Leave a Review</h4>
      <form method="post" action="/listing/<%= listing.id  %>/reviews">

        <!----rating mate div-->
        <div class="mb-3 mt-3">
          <label for="rating" class="form-label">Rating</label>
          <input
            type="range" class="form-range"
            min="1"
            max="5"
            id="rating"
            name="review[rating]"
          />
        </div>
        <div  class="mb-3 mt-3">
          <label for="comment"  class="form-label">Comments</label>
          <textarea
            name="review[rating]"
            cols="30"
            rows="3"
            id="comment"
            class="form-control"
          ></textarea>
        </div>
        <button class="btn btn-outline-dark">Submit</button>
      </form>
    </div>
  </div>
</body>





